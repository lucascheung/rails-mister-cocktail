<h1><%= @cocktail.name %></h1>

<%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill, gravity: :face %>

<ul>
  <% @cocktail.doses.each do |dose| %>
    <li>
      <%= dose.description %>
      <%= dose.ingredient.name %>
      <%= link_to dose_path(dose), method: :delete do  %>
        <i class="far fa-trash-alt"></i>
      <% end %>
    </li>
  <% end %>
</ul>

<%= link_to "Edit", edit_cocktail_path(@cocktail) %>


<%= link_to new_cocktail_dose_path(@cocktail) do %>
  <i class="fas fa-plus"></i> Ingredient
<% end %>
<%= link_to "Go back", root_path  %>
